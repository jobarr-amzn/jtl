{
	!init: {
      db: module("jdbc",{
         uri:"jdbc:sqlite:src/test/resources/recurse.db",
         driver:"org.sqlite.JDBC"
      })
	},
	_:  wanted/pp()/amend({children:[id]/ii()}),
	ii: ch()/amend({children:[id]/ii()}),
	ch: db.query("select id,name from items where parentid = ?"/copy(count($_))/join(" UNION "),.),
	pp: db.query("select id,name from items where id = ?"/copy(count($_))/join(" UNION "),.)
}
